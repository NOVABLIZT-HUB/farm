-- // 1. FPS CAP //
if setfpscap then
    setfpscap(3)
    print("FPS Capped to 3")
end

local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local RunService = game:GetService("RunService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local TeleportService = game:GetService("TeleportService")
local HttpService = game:GetService("HttpService")
local CoreGui = game:GetService("CoreGui")

local LocalPlayer = Players.LocalPlayer

print("[SCRIPT] Starting up...")

-- // 2. SAFE UI SETUP //
-- We wrap this in pcall to ensure the script doesn't crash if CoreGui is protected
local ScreenGui
local StatusLabel

local successUI, errUI = pcall(function()
    ScreenGui = Instance.new("ScreenGui")
    -- Try CoreGui first, fallback to PlayerGui
    local parent = CoreGui
    if not pcall(function() parent = CoreGui end) then
        parent = LocalPlayer:WaitForChild("PlayerGui")
    end
    ScreenGui.Parent = parent
    
    StatusLabel = Instance.new("TextLabel")
    StatusLabel.Parent = ScreenGui
    StatusLabel.Size = UDim2.new(0, 300, 0, 50)
    StatusLabel.Position = UDim2.new(0.5, -150, 0, 10)
    StatusLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    StatusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
    StatusLabel.TextSize = 20
    StatusLabel.Text = "Status: Initializing..."
end)

if not successUI then
    warn("Failed to create UI: " .. tostring(errUI))
end

local function SetStatus(text)
    if StatusLabel then
        StatusLabel.Text = "Status: " .. text
    end
    print("[STATUS] " .. text)
end

-- // 3. CONFIGURATION //
local CoinsFolder = Workspace:FindFirstChild("CoinsFolder") or Instance.new("Folder")
CoinsFolder.Name = "CoinsFolder"
CoinsFolder.Parent = Workspace

local WalkingPlatform = Workspace:FindFirstChild("WalkingPlatform") or Instance.new("Part")
WalkingPlatform.Name = "WalkingPlatform"
WalkingPlatform.Size = Vector3.new(5, 1, 5)
WalkingPlatform.Anchored = true
WalkingPlatform.Transparency = 1 
WalkingPlatform.CanCollide = true
WalkingPlatform.Parent = Workspace

local visited = {}
local currentPlatformY = 148
local FailCount = 0 
local RoundTimerPart = Workspace:WaitForChild("RoundTimerPart", 5) -- Reduced wait time, handled in loop

-- // 4. SAFE SERVER HOP //
local function ServerHop()
    SetStatus("Hopping Server...")
    local success, err = pcall(function()
        local PlaceId = game.PlaceId
        local Api = "https://games.roblox.com/v1/games/"
        local _servers = Api..PlaceId.."/servers/Public?sortOrder=Desc&limit=100"
        
        local function ListServers(cursor)
            local Raw = game:HttpGet(_servers .. ((cursor and "&cursor="..cursor) or ""))
            return HttpService:JSONDecode(Raw)
        end

        local Server, Next
        repeat
            local Servers = ListServers(Next)
            if not Servers or not Servers.data then return end
            Server = Servers.data[math.random(1, #Servers.data)]
            Next = Servers.nextPageCursor
        until Server and Server.playing < Server.maxPlayers and Server.id ~= game.JobId

        if Server then
            TeleportService:TeleportToPlaceInstance(PlaceId, Server.id, LocalPlayer)
        end
    end)
    
    if not success then
        SetStatus("Hop Failed: " .. tostring(err))
        task.wait(3)
    end
end

-- // 5. PLATFORM LOOP //
RunService.Heartbeat:Connect(function()
    if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
        local rootPos = LocalPlayer.Character.HumanoidRootPart.Position
        WalkingPlatform.CFrame = CFrame.new(rootPos.X, currentPlatformY, rootPos.Z)
    end
end)

-- // 6. MAP PROCESSING //
local function ProcessMap(child)
    if not child:IsA("Model") then return end
    
    task.spawn(function()
        local container = child:FindFirstChild("CoinContainer")
        local retries = 0
        -- Wait up to 30 seconds for container
        while not container and child.Parent and retries < 30 do
            task.wait(1)
            container = child:FindFirstChild("CoinContainer")
            retries = retries + 1
        end
        
        if not container then return end
        SetStatus("Map Found: " .. child.Name)

        local function moveCoin(coin)
            if not coin or coin:GetAttribute("Collected") then return end
            task.wait(0.6)
            coin.Parent = CoinsFolder
            coin:SetAttribute("Collected", false)
            coin.Transparency = 1
        end

        for _, coin in ipairs(container:GetChildren()) do
            moveCoin(coin)
        end
        container.ChildAdded:Connect(moveCoin)
    end)
end

for _, child in ipairs(Workspace:GetChildren()) do ProcessMap(child) end
Workspace.ChildAdded:Connect(ProcessMap)

-- // 7. SEARCH HELPERS //
local function FindBestCoin(radius, hrp)
    local candidates = {}
    for _, coin in ipairs(CoinsFolder:GetChildren()) do
        if coin:IsA("Part") and not visited[coin] and coin:FindFirstChild("TouchInterest") then
            if (coin.Position - hrp.Position).Magnitude <= radius then
                table.insert(candidates, coin)
            end
        end
    end
    if #candidates == 0 then return nil end
    return candidates[math.random(1, #candidates)]
end

local function RandomWaterfallWait(hrp)
    SetStatus("Waiting (Waterfall)...")
    task.wait(0.5)
    local c1 = FindBestCoin(50, hrp)
    if c1 then return c1 end

    task.wait(0.3)
    local c2 = FindBestCoin(50, hrp)
    if c2 then return c2 end
    
    task.wait(0.4)
    local c3 = FindBestCoin(50, hrp)
    if c3 then return c3 end
    
    return nil
end

-- // 8. TELEPORT //
local function TeleportToCoin(coin, hrp)
    if not hrp or not coin or not coin.Parent then return false end
    if not coin:FindFirstChild("TouchInterest") then return false end

    SetStatus("Teleporting to Coin...")
    
    local pos = coin.Position
    local currentPos = hrp.Position
    local directionVector = (pos - currentPos)

    currentPlatformY = pos.Y - 2
    WalkingPlatform.CFrame = CFrame.new(pos.X, currentPlatformY, pos.Z)

    if directionVector.Magnitude < 0.1 then
        hrp.CFrame = CFrame.new(pos)
    else
        local directionUnit = directionVector.Unit
        local lookAtPos = pos + (directionUnit * 5)
        hrp.CFrame = CFrame.new(pos, lookAtPos)
    end
    
    local startTime = tick()
    local maxWaitTime = 1.0 
    
    repeat
        if coin and coin.Parent and coin:FindFirstChild("TouchInterest") then
            if firetouchinterest then
                firetouchinterest(coin, hrp, 0)
                task.wait(0.15)
                firetouchinterest(coin, hrp, 1)
                task.wait(0.15)
            else
                -- Fallback if executor lacks firetouchinterest (unlikely)
                hrp.CFrame = coin.CFrame
                task.wait(0.3)
            end
        else
            task.wait(0.3)
        end
    until (tick() - startTime) > maxWaitTime
    
    return true
end

-- // 9. CHECK FULL BAG //
local function CheckAndResetIfFull(hum)
    -- Safely check remote
    local success, result = pcall(function()
        local remotes = ReplicatedStorage:WaitForChild("Remotes", 2)
        if not remotes then return nil end
        return remotes.Gameplay.GetCurrentPlayerData:InvokeServer()
    end)
    
    if success and result and result[LocalPlayer.Name] then
        local coins = result[LocalPlayer.Name].Coins or 0
        if coins >= 50 then
            SetStatus("Bag Full (50/50). Resetting...")
            hum.Health = 0
            task.wait(4)
            return true
        end
    end
    return false
end

-- // 10. MAIN LOOP //
task.spawn(function()
    while task.wait(0.5) do
        -- A. Handle Round Timer variable safely
        if not RoundTimerPart then
            RoundTimerPart = Workspace:FindFirstChild("RoundTimerPart")
        end

        -- B. Check Fail Count
        if FailCount >= 20 then
            SetStatus("Fails > 20. Hopping...")
            ServerHop()
            FailCount = 0 -- Reset so we don't spam hop while loading
            task.wait(10)
        end

        -- C. Check Round Status
        if not RoundTimerPart or RoundTimerPart:GetAttribute("Time") == -1 then
            if #visited > 0 then
                SetStatus("Round Ended. Clearing cache.")
                table.clear(visited)
                CoinsFolder:ClearAllChildren()
                FailCount = 0
            else
                SetStatus("Waiting for Round...")
            end
            continue
        end

        -- D. Check Character
        local Char = LocalPlayer.Character
        local HRP = Char and Char:FindFirstChild("HumanoidRootPart")
        local Hum = Char and Char:FindFirstChild("Humanoid")
        
        if not HRP or not Hum or Hum.Health <= 0 then
            SetStatus("Waiting for Respawn...")
            continue
        end

        -- E. Check Bag
        if CheckAndResetIfFull(Hum) then
            continue
        end

        -- F. Farm
        local startCoin = FindBestCoin(2000, HRP)
        if startCoin then
            local success = TeleportToCoin(startCoin, HRP)
            if success then
                visited[startCoin] = true
                FailCount = 0
                
                -- Chain Loop
                for i = 1, 5 do
                    if CheckAndResetIfFull(Hum) then break end
                    
                    local nextCoin = RandomWaterfallWait(HRP)
                    if nextCoin then
                        local chainSuccess = TeleportToCoin(nextCoin, HRP)
                        if chainSuccess then
                            visited[nextCoin] = true
                            FailCount = 0
                        else
                            FailCount = FailCount + 1
                            break
                        end
                    else
                        break 
                    end
                end
            else
                FailCount = FailCount + 1
            end
        else
            SetStatus("Searching for valid coins...")
        end
    end
end)
